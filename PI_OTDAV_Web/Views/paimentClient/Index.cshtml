        mywindow.document.write('</head><body >');
        mywindow.document.write('<h1>' + "Facture" + '</h1>');
        //mywindow.document.write(document.getElementById('img'));
        mywindow.document.write('<div style="width:80%;margin-left:10%;border:1.5px solid #1b1a19;border-radius:7px;">');

        mywindow.document.write('<img src="http://localhost:8080/pi/logo.png" style="width:90%;height:250;margin-left:5%"/>');
        mywindow.document.write('<div style="margin-left:7%"><h3>Bonjour Boukhtioua Ahmed,</h3>Bienvenue chez <b>OTDAV</b>. Voici votre facture !');
        mywindow.document.write(document.getElementById("print").innerHTML);
        mywindow.document.write('<p>Vous pouvez accéder au site : <a style="color:#253c93;text-decoration:none">www.OTDAV.tn</a></p>');
        mywindow.document.write('</div></div>');
        mywindow.document.write('</body></html>');

        mywindow.document.close(); // necessary for IE >= 10
        mywindow.focus(); // necessary for IE >= 10*/

        mywindow.print();
        mywindow.close();

        return true;
    }
</script>
